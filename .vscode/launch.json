{
    "version": "0.8.0",
    "configurations": [
        {
            "name": "Shell",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/cyphernetes",
            "args": ["shell"],
            "console": "integratedTerminal"
        },
        {
            "name": "Operator",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/operator/cmd/main.go",
            "args": [],
            "env": {
                "KUBECONFIG": "${env:HOME}/.kube/config"
            },
            "cwd": "${workspaceFolder}/operator",
            "buildFlags": "-tags=debug",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/cmd/cyphernetes",
            "args": ["-test.v"],
            "showLog": true
        }
    ]
}